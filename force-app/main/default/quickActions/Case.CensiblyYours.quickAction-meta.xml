<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Creates CY Opportunity from Case</description>
    <fieldOverrides>
        <field>AccountId</field>
        <formula>Case.AccountId</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Amount</field>
        <formula>10</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Case__c</field>
        <formula>Case.Id</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>CloseDate</field>
        <formula>NOW() + 30</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Name</field>
        <formula>&quot;CensiblyYours&quot;</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>OwnerId</field>
        <formula>$User.Id</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Product_Type__c</field>
        <literalValue>Add-On Product</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Service_Option__c</field>
        <literalValue>CensiblyYours</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>StageName</field>
        <literalValue>Pending Decision</literalValue>
    </fieldOverrides>
    <label>CensiblyYours</label>
    <optionsCreateFeedItem>true</optionsCreateFeedItem>
    <quickActionLayout>
        <layoutSectionStyle>TwoColumnsLeftToRight</layoutSectionStyle>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Opportunity_Notes__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
        <quickActionLayoutColumns/>
    </quickActionLayout>
    <successMessage>CensiblyYours Opportunity created!</successMessage>
    <targetObject>Opportunity</targetObject>
    <targetParentField>Case__c</targetParentField>
    <targetRecordType>Opportunity.CensiblyYours</targetRecordType>
    <type>Create</type>
</QuickAction>
