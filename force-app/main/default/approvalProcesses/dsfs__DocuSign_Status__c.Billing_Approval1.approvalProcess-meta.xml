<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>dsfs__Company__c</field>
        <field>dsfs__Contact__c</field>
        <field>dsfs__Opportunity__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>billing@myubiquity.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tmoyer@myubiquity.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submission for Approval</label>
        <name>Submission_for_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/A4S_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>dsfs__DocuSign_Status__c.dsfs__Subject__c</field>
            <operation>contains</operation>
            <value>Agreement for Services-</value>
        </criteriaItems>
        <criteriaItems>
            <field>dsfs__DocuSign_Status__c.dsfs__Envelope_Status__c</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Remove_Billing_Rejection_if_Applicable</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Opp</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>A4S_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reject_Opp</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Billing Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
