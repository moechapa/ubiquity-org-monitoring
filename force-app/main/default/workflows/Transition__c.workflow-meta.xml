    <rules>
        <fullName>5500 PYE Date Equals Today %28Compliance%29</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Transition__c.Final_5500_PYE__c</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Transition - Email - Notification Date Entered</fullName>
        <actions>
            <name>Transition_Notification_Date_Alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Transition__c.Notification_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Transition__c.Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
        <criteriaItems>
            <field>Transition__c.Notification_Date__c</field>
            <operation>greaterThan</operation>
            <value>10/10/2024</value>
        </criteriaItems>
        <description>Alerts CSTs, Operations, Billing when a Notification Date is entered for a Plan Transition</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Transition - Task - Validate Enhanced Offering</fullName>
        <actions>
            <name>Validate_Deconversion_Reason</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Transition__c.Transition_Reason__c</field>
            <operation>equals</operation>
            <value>Enhanced Offering</value>
        </criteriaItems>
        <description>Creates task for 2 days out to verify that the real reason is Enhanced Offering</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>Validate_Deconversion_Reason</fullName>
        <assignedTo>transitions@myubiquity.com</assignedTo>
        <assignedToType>user</assignedToType>
        <description>&quot;Enhanced Offering&quot; should only be noted as the Transition Reason when no other reason can be established. If all attempts to establish a reason have failed please leave the field as is, otherwise please update the field appropriately.</description>
        <dueDateOffset>2</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Validate Deconversion Reason</subject>
    </tasks>
