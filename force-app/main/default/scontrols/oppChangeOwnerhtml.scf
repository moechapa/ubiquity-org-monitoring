		<input name="p2_lkid" id="p2_lkid" value="000000000000000" type="hidden">
		<input name="p2_lkold" id="p2_lkold" value="null" type="hidden">
		<input name="p2_lktp" id="p2_lktp" value="005" type="hidden">
