        <locationY>583</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>YesAdvisorFound</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>relatedAdvisorAssociations</leftValueReference>
