<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Used to record when a task is first marked as completed</description>
    <environments>Default</environments>
    <interviewLabel>Task | Before Save | Stamp Completion Date {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Task | Before Save | Stamp Completion Date</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Stamp_Completion_Datetime</name>
        <label>Stamp Completion Datetime</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <inputAssignments>
            <field>Stamped_Complete__c</field>
            <value>
                <elementReference>$Flow.CurrentDateTime</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Stamp_Completion_Datetime</targetReference>
        </connector>
        <filterFormula>((ISNEW() &amp;&amp; ISPICKVAL({!$Record.Status},&quot;Completed&quot;))
||
ISCHANGED({!$Record.Status}) &amp;&amp; ISPICKVAL({!$Record.Status},&quot;Completed&quot;))
&amp;&amp;
ISNULL({!$Record.Stamped_Complete__c})
&amp;&amp;
{!$User.Profile_ID__c} = &quot;00e37000000kyMz&quot;</filterFormula>
        <object>Task</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
