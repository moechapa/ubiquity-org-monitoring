    <decisions>
        <description>Translates record type -&gt; survey type</description>
        <name>Check_Survey_Type</name>
        <label>Check Survey Type</label>
        <locationX>446</locationX>
        <locationY>287</locationY>
        <defaultConnector>
            <targetReference>Does_NPS_need_copy</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Case_Resolution_CSAT</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>CSAT_NPS</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>CSAT</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Five_Question_Case_CSAT</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Case_Resolution_Survey_Type</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Case Resolution CSAT</label>
        </rules>
        <rules>
            <name>Force_Out_1k</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Force_Out_Distribution_1K</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Force_Out_1k_Survey_Type</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Force Out 1k</label>
        </rules>
        <rules>
            <name>Force_Out_5k</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Force_Out_Distribution_5K</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Force_Out_5k_Survey_Type</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Force Out 5k</label>
        </rules>
    </decisions>
    <decisions>
        <description>NPS Score copied to NPS field</description>
        <name>Does_NPS_need_copy</name>
        <label>Does NPS need copy</label>
        <locationX>446</locationX>
        <locationY>587</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Needs_nps_sync</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.NPS__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>npsNumberToText</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>set_nps_picklist_value</targetReference>
            </connector>
            <label>Needs nps sync</label>
        </rules>
    </decisions>
    <description>Performs updates / checks that can&apos;t be filtered w/ entry criteria

- Sets survey type
- Sets nps field</description>
    <environments>Default</environments>
    <formulas>
        <name>npsNumberToText</name>
        <dataType>String</dataType>
        <expression>TEXT({!$Record.NPS_Score__c})</expression>
    </formulas>
