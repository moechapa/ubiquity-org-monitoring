    <description>Sets values for last inbound, last outbound, and last activity date when an email is sent or received on a case.  Also creates new case if email is received on a case that&apos;s been closed for 30+ days.</description>
    <environments>Default</environments>
    <formulas>
        <name>oneHourAgo</name>
        <dataType>DateTime</dataType>
        <expression>{!$Flow.CurrentDateTime} - (1/24)</expression>
    </formulas>
    <formulas>
        <name>trimmedDescription</name>
        <dataType>String</dataType>
        <expression>TRIM(LEFT({!$Record.TextBody},300))</expression>
    </formulas>
    <formulas>
        <name>trimmedSubject</name>
        <dataType>String</dataType>
        <expression>TRIM(LEFT({!$Record.Subject},255))</expression>
    </formulas>
    <formulas>
        <name>twoMinutesAgo</name>
        <dataType>DateTime</dataType>
        <expression>{!$Flow.CurrentDateTime} - (2/60/24)</expression>
    </formulas>
    <formulas>
        <name>x30DaysAgo</name>
        <dataType>Date</dataType>
        <expression>TODAY()-30</expression>
    </formulas>
