    <description>If a Promotion is present, apply specified discount to Products</description>
    <environments>Default</environments>
    <formulas>
        <description>Commission before partner fee, discount, promo</description>
        <name>defaultComm</name>
        <dataType>Currency</dataType>
        <expression>({!Prod_Loop.ListPrice} * {!Prod_Loop.Quantity})</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>discountDollarAmount</name>
        <dataType>Currency</dataType>
        <expression>{!defaultComm} * ({!Promo_Loop.Discount__c} / 100)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description>The amount to be taken from commission for this promotion</description>
        <name>subtractFromComm</name>
        <dataType>Currency</dataType>
        <expression>{!discountDollarAmount} - ({!discountDollarAmount} * ({!Promo_Loop.Commission__c} / 100))</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Update Promotional Discount {!$Flow.CurrentDateTime}</interviewLabel>
