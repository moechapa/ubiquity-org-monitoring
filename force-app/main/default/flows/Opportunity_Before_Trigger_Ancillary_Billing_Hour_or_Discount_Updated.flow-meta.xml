        </rules>
    </decisions>
    <decisions>
        <name>Flat_or_Hourly</name>
        <label>Flat or Hourly?</label>
        <locationX>182</locationX>
        <locationY>395</locationY>
        <defaultConnector>
            <targetReference>updateFlatAmount</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Flat</defaultConnectorLabel>
        <rules>
            <name>Hourly</name>
            <conditionLogic>and</conditionLogic>
