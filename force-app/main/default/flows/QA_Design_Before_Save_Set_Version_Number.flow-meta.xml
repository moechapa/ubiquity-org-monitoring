<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Add_1_to_prior_ver_number</name>
        <label>Add 1 to prior ver number</label>
        <locationX>176</locationX>
        <locationY>395</locationY>
        <assignmentItems>
            <assignToReference>$Record.Version__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>newVersionNumber</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>Assigns version 1 for designs with no prior, and prior + 1 for all others</description>
    <environments>Default</environments>
    <formulas>
        <name>newVersionNumber</name>
        <dataType>Number</dataType>
        <expression>{!prevVersionNumber} + 1</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>QA Design | Before Save | Set Version Number {!$Flow.CurrentDateTime}</interviewLabel>
    <label>QA Design Version | Before Save | Set Version Number</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Check_other_versions</name>
        <label>Check other versions</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Add_1_to_prior_ver_number</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>QA_Design__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.QA_Design__c</elementReference>
            </value>
        </filters>
        <object>QA_Design_Version__c</object>
        <outputAssignments>
            <assignToReference>prevVersionNumber</assignToReference>
            <field>Version__c</field>
        </outputAssignments>
        <sortField>Version__c</sortField>
        <sortOrder>Desc</sortOrder>
    </recordLookups>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_other_versions</targetReference>
        </connector>
        <filterLogic>or</filterLogic>
        <filters>
            <field>Version__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>QA_Design_Version__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
    <variables>
        <name>prevVersionNumber</name>
        <dataType>Number</dataType>
