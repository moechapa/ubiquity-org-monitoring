<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Plan_is_Required_for_Add_On</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL(Product_Type__c, &quot;Add-On Product&quot;) &amp;&amp;
ISNULL(Plan__c) &amp;&amp;
ISPICKVAL(StageName, &quot;Closed Won&quot;))</errorConditionFormula>
    <errorDisplayField>Plan__c</errorDisplayField>
    <errorMessage>Please Include a Plan for any Add-On Products</errorMessage>
</ValidationRule>
