<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Number_of_Employees</fullName>
    <active>true</active>
    <description>Must be Null or zero</description>
    <errorConditionFormula>NumberOfEmployees = 0
&amp;&amp;
PRIORVALUE(NumberOfEmployees)!=0</errorConditionFormula>
    <errorMessage>Employee Count Cannot Be Zero</errorMessage>
</ValidationRule>
