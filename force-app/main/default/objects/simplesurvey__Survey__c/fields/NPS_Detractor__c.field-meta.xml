<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NPS_Detractor__c</fullName>
    <description>Flags NPS Survey as Detractor for use with overall NPS Calc - https://www.getfeedback.com/resources/salesforce/measure-nps-salesforce/</description>
    <externalId>false</externalId>
    <formula>IF((VALUE(TEXT( NPS__c ))) &lt; 7, 1, 0)</formula>
    <inlineHelpText>1 = Promoter 0 = Not a Detractor</inlineHelpText>
    <label>NPS Detractor</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
