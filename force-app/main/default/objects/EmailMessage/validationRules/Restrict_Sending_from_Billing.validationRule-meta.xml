<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_Sending_from_Billing</fullName>
    <active>true</active>
    <errorConditionFormula>AND
($Profile.Id  &lt;&gt; &quot;00e37000000hZbo&quot;,
FromAddress = &quot;billing@myubiquity.com&quot;)</errorConditionFormula>
