<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Address_Name_Change_LOI</fullName>
    <active>true</active>
    <description>Verifies Address / Name Change LOI link is in case</description>
    <errorConditionFormula>Address_Name_Change_Child_Cases__c &gt; DATE(1900,01,01)
&amp;&amp;
