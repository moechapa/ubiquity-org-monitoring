<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_MRR_before_complete</fullName>
    <active>true</active>
    <description>Blocks liquidation date from being entered before monthly recurring revenue on all plans besides single(k).</description>
    <errorConditionFormula>NOT(ISPICKVAL(Plan__r.Product_Type1__c, &quot;Single(k)&quot;)) &amp;&amp;
NOT(ISBLANK(Liquidation_Date__c)) &amp;&amp;
ISBLANK(Monthly_Recurring_Revenue__c) &amp;&amp;
(ISCHANGED(Liquidation_Date__c) ||
ISCHANGED(Monthly_Recurring_Revenue__c))</errorConditionFormula>
    <errorDisplayField>Monthly_Recurring_Revenue__c</errorDisplayField>
    <errorMessage>MRR is required for liquidation date</errorMessage>
</ValidationRule>
