<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Plan_Hold_Reason</fullName>
    <active>true</active>
    <description>Requires Plan Hold Reason when a plan is put on hold</description>
    <errorConditionFormula>NOT(ISBLANK(Plan_Hold_Date__c))
&amp;&amp;
ISBLANK(TEXT(Plan_Hold_Reason__c))</errorConditionFormula>
    <errorDisplayField>Plan_Hold_Reason__c</errorDisplayField>
    <errorMessage>To place a plan on hold, please confirm &quot;Plan Hold Reason&quot;</errorMessage>
</ValidationRule>
